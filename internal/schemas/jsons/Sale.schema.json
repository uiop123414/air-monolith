{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "operation_type": {
      "type": "string"
    },
    "operation_time": {
      "$ref": "./CustomTime.schema.json"
    },
    "operation_place": {
      "type": "string"
    },
    "passenger": {
      "$ref": "./Passenger.schema.json"
    },
    "routes": {
      "type": "array",
      "items": {
        "$ref": "./Route.schema.json"
      }
    }
  },
  "required": [
    "operation_type",
    "operation_time",
    "operation_place",
    "passenger",
    "routes"
  ]
}
